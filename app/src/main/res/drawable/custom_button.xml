<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--  Button pressed -->
    <item
        android:state_checked="true">
        <shape>
            <gradient
                android:startColor="@color/redstartcolor"
                android:endColor="@color/redendcolor"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ffffff" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>

    <!--  Button not pressed -->
    <item>
        <shape>
            <gradient
                android:startColor="@color/yellowstartcolor"
                android:endColor="@color/yellowendcolor"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FFFFFF" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>